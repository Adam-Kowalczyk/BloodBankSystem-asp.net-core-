@model BloodBankSystem.Models.BloodDonation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BloodDonation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BloodDonationID" />
            <div class="form-group">
                <label asp-for="DonationDate" class="control-label"></label>
                <input asp-for="DonationDate" class="form-control" />
                <span asp-validation-for="DonationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volume" class="control-label"></label>
                <input asp-for="Volume" class="form-control" />
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NurseID" class="control-label"></label>
                <select asp-for="NurseID" class="form-control" asp-items="ViewBag.NurseID">Nurse</select>
                <span asp-validation-for="NurseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonorID" class="control-label"></label>
                <select asp-for="DonorID" class="form-control" asp-items="ViewBag.DonorID">Donor</select>
                <span asp-validation-for="DonorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
